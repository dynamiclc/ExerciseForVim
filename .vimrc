set nowrap          " Disable line wrap
set background=dark " Assume a dark background
set number          " Show line number
syntax on           " Syntax highlighting
set mouse=a         " Automatically enable mouse usage
set ruler           " Show ruler
set expandtab       " Expand tab into spaces
set shiftwidth=2    " Set shift width as two spaces when typing Tab
set autoindent      " Auto indent when typing Return
"setlocal spell spelllang=en_us " Set spelling check using American English dictionary
set noantialias     " Disable anti-alias font rendering
set history=10000   " Set the maximum number of command that can be remembered
set dictionary=/usr/share/dict/words " Set a dictionary to support Ctrl-X Ctrl-K
